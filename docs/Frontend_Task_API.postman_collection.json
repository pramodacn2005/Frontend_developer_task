		{
			"name": "Tasks",
			"item": [
				{
					"name": "Get All Tasks",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/tasks?status=pending&priority=high&search=task",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"tasks"
							],
							"query": [
								{
									"key": "status",
									"value": "pending",
									"description": "Filter by status: pending, in-progress, completed"
								},
								{
									"key": "priority",
									"value": "high",
									"description": "Filter by priority: low, medium, high"
								},
								{
									"key": "search",
									"value": "task",
									"description": "Search in title and description"
								}
							]
						},
						"description": "Get all tasks for authenticated user with optional filters"
					},
					"response": []
				},
